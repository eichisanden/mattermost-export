extends layout

block content
  h1= title
  form(action="/logout", method="POST")
    button.btn.btn-primary(type="submit") LogOut

  table.table
    tr
      td id
      td= id
    tr
      td username
      td= username
    tr
      td email
      td= email
    tr
      td チーム
      td
        select#teamId(name="teamId")
          each team in teams
            option(value=team.id) #{team.name}
    tr
      td チャンネル
      td
        select#channelId(name="channelId")
          each channel in channels
            option(value=channel.id) #{channel.name}

  script(src="/javascripts/top.js")
